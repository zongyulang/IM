<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vim.modules.group.mapper.ImGroupInviteMapper">

    <resultMap id="BaseResultMap" type="com.vim.modules.group.domain.ImGroupInvite">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="groupId" column="group_id" jdbcType="BIGINT"/>
        <result property="fromId" column="from_id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="checkUserId" column="check_user_id" jdbcType="BIGINT"/>
        <result property="checkMessage" column="check_message" jdbcType="VARCHAR"/>
        <result property="waitCheck" column="wait_check" jdbcType="CHAR"/>
        <result property="checkResult" column="check_result" jdbcType="CHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createBy" column="create_by" jdbcType="BIGINT"/>
        <result property="updateBy" column="update_by" jdbcType="BIGINT"/>
        <result property="delFlag" column="del_flag" jdbcType="CHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,group_id,from_id,
        user_id,check_user_id,check_message,
        wait_check,check_result,create_time,
        update_time,create_by,update_by,
        del_flag,remark
    </sql>
    <select id="waitCheckList" parameterType="string" resultType="com.vim.modules.group.result.GroupInviteCount">
        select group_id as groupId, count(1) as count
        from im_group_invite
        where check_user_id = #{checkUserId} and wait_check = '0'
        group by group_id
    </select>
</mapper>
